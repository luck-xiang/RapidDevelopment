<resources>

    <style name="xmlCreateScreanEdittet">
        <item name="android:background">@drawable/box_rect_f8a899_solid</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/x20</item>
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textColorHint">@color/color_eeeeee</item>
        <item name="android:layout_marginTop">@dimen/x10</item>
        <item name="android:inputType">numberDecimal</item>
        <!--<item name="android:"></item>-->
    </style>

    <style name="xmlCreateScreanEdittet1">
        <item name="android:background">@drawable/box_rect_f8a899_solid</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/x20</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textColorHint">@color/color_eeeeee</item>
        <item name="android:layout_margin">@dimen/x10</item>
        <item name="android:inputType">numberDecimal</item>
        <!--<item name="android:"></item>-->
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="redactpop_anim_style">
        <item name="android:windowEnterAnimation">@anim/redactpop_show</item>
        <item name="android:windowExitAnimation">@anim/redactpop_hidden</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

</resources>
