<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ll_all"
              android:orientation="vertical"
    >

    <TextView
        android:textColor="@color/color_969696"
        android:gravity="center"
        android:text="你确定删除该商品"
        android:textSize="@dimen/text_size"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tv_dialog_content"/>

    <View
        android:background="@color/color_dddddd"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/btn_ededed_27c4c4"
            android:textColor="@color/text_b4b4b4_ffffff"
            android:layout_height="match_parent"/>

        <View
            android:background="@color/color_d5d5d5"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_dialog_sure"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/text_size"
            android:background="@drawable/btn_ededed_27c4c4"
            android:textColor="@color/text_b4b4b4_ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
