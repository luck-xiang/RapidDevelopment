<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_xml_create_screan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kexiang.function.view.own.DragRightViewLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            >

            <TextView
                android:text="1"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@color/color_f8a899"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:text="2"
                android:background="@color/gold"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>


        </com.kexiang.function.view.own.DragRightViewLayout>
    </FrameLayout>


    <com.kexiang.function.view.own.DragRightViewLayout
        android:layout_width="300dp"
        android:layout_height="100dp"

        >

        <TextView
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:background="@color/color_f8a899"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:text="2"
            android:background="@color/gold"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>


    </com.kexiang.function.view.own.DragRightViewLayout>


    <com.kexiang.function.view.own.DragRightViewLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:singleShow="true"
        >


        <TextView
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:background="@color/color_f8a899"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:text="2"
            android:background="@color/gold"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>


    </com.kexiang.function.view.own.DragRightViewLayout>

    <com.kexiang.function.view.own.GestureDetectorView
        android:background="@color/color_fd6361"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


</LinearLayout>

