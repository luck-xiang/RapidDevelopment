<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.kexiang.function.view.TitleBarView
            android:id="@+id/title_bar"
            android:background="@color/color_f03e1b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.kxiang.quick.function.activity.touch.ViewB
            android:background="@color/color_FB819E"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <com.kxiang.quick.function.activity.own.RecycleTestView
            android:id="@+id/rlv_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>
