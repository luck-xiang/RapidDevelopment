<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_chat_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/include"
        layout="@layout/fun_title_back_bar"/>

    <LinearLayout
        android:id="@+id/ll_replay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_name"
            android:background="@drawable/border_cr_ffffff_f30e1b_three"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_send"
            android:text="发送"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_f03e1b_ffffff"
            android:layout_width="80dp"
            android:background="@drawable/btn_sure_add"
            android:layout_height="30dp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_all"
        android:layout_below="@id/include"
        android:layout_above="@id/ll_replay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
